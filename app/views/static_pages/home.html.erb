<div class="container">
  <div class="row">
    <div class="col-md-12">
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" class="search-col">
      <div class="row-fluid">
        <!--emps_search_path-->
        <%= form_tag(resumes_search_path, method: "get") do %>
            <div class="col-md-6">
              <div class="pull-right">
                <p>Что?</p>
                <%= text_field_tag(:skills, nil, class: 'search-text') %>
              </div>
            </div>
            <div class="col-md-6">
              <p>Где?</p>
              <%= text_field_tag(:city, nil, class: 'search-text') %>
              <%= submit_tag("Найти") %>
            </div>
        <% end %>
      </div>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12"><p class="text-center">&copy;2014 Dima i Gleb

    </p>
    </div>
  </div>
</div>
